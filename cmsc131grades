<html>
<head>
<title>Weighted Average Generator</title>

<script>
function setGrades() {
	var quiz = parseFloat(document.getElementById('quiz').value);

	var lab = parseFloat(document.getElementById('lab').value);

	var elms = parseFloat(document.getElementById('elms').value);

	var proj0 = parseFloat(document.getElementById('proj0').value);
	var proj1 = parseFloat(document.getElementById('proj1').value);
	var proj2 = parseFloat(document.getElementById('proj2').value);
	var proj3 = parseFloat(document.getElementById('proj3').value);
	var proj4 = parseFloat(document.getElementById('proj4').value);
	var proj5 = parseFloat(document.getElementById('proj5').value);
	var proj6 = parseFloat(document.getElementById('proj6').value);
	var proj7 = parseFloat(document.getElementById('proj7').value);
	
	var exam1 = parseFloat(document.getElementById('exam1').value);	
	var exam2 = parseFloat(document.getElementById('exam2').value);	
	var final = parseFloat(document.getElementById('final').value);	
		
	// Calculate the total points earned!	
	var QC = 10 * (quiz + lab) / (89+85);
	var EX = 12 * (exam1 + exam2) / 100;
	var ELMS = 8 * (elms) / ( 95 );   //95 so far
	var PROJ = ( 1*proj0 + 3*proj1 + 5*proj2 + 5*proj3 +
 			5*proj4 + 5*proj5 + 5*proj6 + 5*proj7 ) / 100;
	var FIN = 24 * final / 100;

	document.getElementById('total').value = (QC+EX+ELMS+PROJ+FIN);
}
</script>
</head>


<body>
